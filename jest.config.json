{
  "moduleFileExtensions": ["ts", "tsx", "js"],
  "transform": {
    "\\.tsx?$": "ts-jest"
  },
  "testMatch": ["**/*.test.tsx", "**/*.test.ts"],
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "moduleNameMapper": {
    "react-ui-census/(.*)$": "<rootDir>/packages/react-ui-census/$1",
    "react-ui-census$": "<rootDir>/packages/react-ui-census/src",
    "dom-ui-census/(.*)$": "<rootDir>/packages/dom-ui-census/$1",
    "dom-ui-census$": "<rootDir>/packages/dom-ui-census/src",
    "ui-census/(.*)$": "<rootDir>/packages/ui-census/$1",
    "ui-census$": "<rootDir>/packages/ui-census/src"
  }
}
